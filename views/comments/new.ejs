<%- include ("../partials/header") %>
<div class="container">
    <h1 style="text-align: center;">Add new comment to <%=camps.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
    <form action="/allcamps/<%= camps._id %>/comments" method="POST">
        
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="add comment...">
            </div>
            <div class="form-group">
                <input class="btn btn-large btn-outline-primary btn-block" type="submit">
            </div>
    </form>
    <a href="/allcamps">Go back!!</a>
</div>
</div>
<%- include ("../partials/footer") %>
