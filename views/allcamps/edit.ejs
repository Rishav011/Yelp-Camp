<%- include ("../partials/header") %>

<div class="container">
        <h1 style="text-align: center;">Edit <%= camps.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
        <form action="/allcamps/<%= camps._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camps[name]" placeholder="name" value="<%= camps.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camps[image]" placeholder="image url" value="<%= camps.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camps[description]" placeholder="description" ><%= camps.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-outline-primary btn-block" type="submit">
                </div>
        </form>
        <a href="/allcamps">Go back!!</a>
    </div>
</div>

<%- include ("../partials/footer") %>